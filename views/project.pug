extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1 #{projects[id].project_name}       
        p #{projects[id].description}
        
      .project-tech-links-box.box
        h6 Technologies
        ul
        each technology in projects[id].technologies
          li= technology
         
        a.btn-link(href=`${projects[id].live_link}`, target="_blank") Live Demo
        a.btn-link(href=`${projects[id].github_link}`, target="_blank") GitHub Repo

    .project-img-box.box

      img.project-img(src=`${projects[id].image_urls[1]}`, alt=`${projects[id].project_name}`)
      img.project-img(src=`${projects[id].image_urls[2]}`, alt=`${projects[id].project_name}`)
      img.project-img(src=`${projects[id].image_urls[3]}`, alt=`${projects[id].project_name}`)
    nav.nav
      a(href='/')
        span &larr;
        |  Back
